const expect = require('expect')

const counter = (state = 0, action) => {
    switch (action.type) {
        case "INCREMENT":
            return state + 1
        case "DECREMENT":
            return state - 1
        default:
            return state
    }
}

expect(
    counter(0, {type: "INCREMENT"})
).toBe(1)

expect(
    counter(1, {type: "INCREMENT"})
).toBe(2)


expect(
    counter(1, {type: "DECREMENT"})
).toBe(0)

expect(
    counter(3, {type: "DECREMENT"})
).toBe(2)

expect(
    counter(3, {type: "NOT AN ACTION"})
).toBe(3)

expect(
    counter(undefined, {type: "VOID ACTION"})
).toBe(0)

expect(
    counter(undefined, {type: "INCREMENT"})
).toBe(1)